{
  "name": "Template for Express based-services",
  "version": "0.1.0",
  "license": "ISC",
  "description": "template for building apps in typescripted express",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc --build tsconfig.prod.json",
    "check-types": "tsc -p . --noEmit",
    "eslint": "eslint --ext .ts ./",
    "eslint-fix": "eslint --ext .ts ./ --fix",
    "start": "ts-node-dev --inspect --respawn --transpile-only -r tsconfig-paths/register --watch ./src ./src/index.ts",
    "test": "jest --config ./jest.config.js",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "qc": "npm test && npm run eslint && npm run check-types"
  },
  "_moduleAliases": {
    "@src": "dist"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dayjs": "^1.11.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-joi-validation": "^5.0.1",
    "express-mung": "^0.5.1",
    "helmet": "^6.0.0",
    "http-status-codes": "^2.2.0",
    "joi": "^17.6.2",
    "module-alias": "^2.2.2",
    "mongodb": "^4.10.0",
    "mongoose": "^6.6.4",
    "morgan": "^1.10.0",
    "tslib": "^2.4.0",
    "uuid": "^9.0.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.19.3",
    "@babel/preset-typescript": "^7.18.6",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/express-mung": "^0.5.2",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.1.1",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.8.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint": "^8.24.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^29.1.2",
    "jest-mock-extended": "^3.0.1",
    "mockdate": "^3.0.5",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4"
  }
}
