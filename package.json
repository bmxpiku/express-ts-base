{
  "name": "Template for Express based-services",
  "version": "0.1.0",
  "license": "ISC",
  "description": "template for building apps in typescripted express",
  "scripts": {
    "build": "tsc --build tsconfig.prod.json",
    "check-types": "tsc -p . --noEmit",
    "eslint": "eslint --ext .ts ./",
    "eslint-fix": "eslint --ext .ts ./ --fix",
    "start": "ts-node-dev --inspect --respawn --transpile-only -r tsconfig-paths/register --watch ./src ./src/index.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "qc": "npm test && npm run eslint && npm run check-types"
  },
  "_moduleAliases": {
    "@src": "dist"
  },
  "dependencies": {
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dayjs": "^1.10.6",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-joi-validation": "^5.0.0",
    "express-mung": "^0.5.1",
    "helmet": "^4.6.0",
    "http-status-codes": "^2.1.4",
    "joi": "^17.4.2",
    "module-alias": "^2.2.2",
    "mongodb": "^3.7.2",
    "mongoose": "^5.13.6",
    "morgan": "^1.10.0",
    "tslib": "^2.3.0",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-mung": "^0.5.2",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^27.0.0",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.4.13",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "babel-jest": "^27.0.6",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-plugin-import": "^2.24.0",
    "jest": "^27.0.6",
    "mockdate": "^3.0.5",
    "supertest": "^6.1.4",
    "ts-node": "^10.2.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  }
}
