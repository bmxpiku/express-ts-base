{
  "compilerOptions": {
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "lib": ["es2020"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@src/*": [
        "src/*"
      ],
    }
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "jest.setup.ts",
    "__mocks__"
  ],
  "exclude": [
    "src/public/"
  ]
}
